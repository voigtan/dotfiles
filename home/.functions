#!/usr/bin/env bash

# Determine size of a file or total size of a directory
# Usage: fs [path]
# If a path is provided, it will display the size of the specified file or directory.
# If no path is provided, it will display the size of all files and directories in the current directory.
fs() {
    if du -b /dev/null > /dev/null 2>&1; then
        local arg=-sbh;
    else
        local arg=-sh;
    fi
    if [[ -n "$@" ]]; then
        du $arg -- "$@";
    else
        du $arg .[^.]* ./*;
    fi;
}

# Launch lazygit and change directory if a new directory is specified
# Usage: lg [options]
# Runs lazygit with the provided options. If a new directory is specified in ~/.lazygit/newdir, it changes to that directory.
lg()
{
    export LAZYGIT_NEW_DIR_FILE=~/.lazygit/newdir
    lazygit "$@"

    if [ -f $LAZYGIT_NEW_DIR_FILE ]; then
        cd "$(cat $LAZYGIT_NEW_DIR_FILE)"
        rm -f $LAZYGIT_NEW_DIR_FILE > /dev/null
    fi
}

# Show git diff with bat highlighting
# Usage: batdiff
# Displays the names of files changed in the git diff with syntax highlighting using bat.
batdiff() {
    git diff --name-only --diff-filter=d | xargs bat --diff
}

# Interact with a running Docker container
# Usage: dockerInteract <container_id>
# Opens an interactive shell session inside the specified Docker container.
dockerInteract() {
    docker exec -it $1 sh
}

# Display gzip compression ratio of a file or a string
# Usage: gz <file|string>
# If no arguments are provided, it reads from stdin.
# If a file is specified, shows the original size and the gzip compressed size of the file, along with the compression ratio.
# If a string is specified, shows the original size and the gzip compressed size of the string, along with the compression ratio.
gz() {
    local input
    local origsize
    local gzipsize
    local ratio

    #if there are no arguments return
    if [ -z "$1" ]; then
        return
    fi

    if [ -d "$1" ]; then # check if the argument is a directory
        input=$(mktemp)
        tar -cf - "$1" | gzip -c > "$input"
        origsize=$(du -sb "$1" 2>/dev/null | awk '{print $1}')
        if [ -z "$origsize" ]; then
            origsize=$(du -sk "$1" | awk '{print $1}')
            origsize=$((origsize * 1024))
        fi
        gzipsize=$(wc -c < "$input")
    else
        if [ -f "$1" ]; then # check if the argument is a file
            input="$1"
        else # treat the argument as a string
            input=$(mktemp)
            printf "%s\n" "$@" > "$input"
        fi
        origsize=$(wc -c < "$input")
        gzipsize=$(gzip -c < "$input" | wc -c)
    fi

    ratio=$(awk "BEGIN {printf \"%.2f\", $gzipsize * 100 / $origsize}")
    orig_human=$(numfmt --to=iec "$origsize" | xargs)
    gzip_human=$(numfmt --to=iec "$gzipsize" | xargs)

    printf "orig: %d bytes (%s)\ngzip: %d bytes (%s) (%.2f%%)\n" \
        "$origsize" "$orig_human" \
        "$gzipsize" "$gzip_human" \
        "$ratio"

    [[ "$input" == /tmp/* ]] && rm -f "$input"
}

# Remove node_modules directories
# Usage: npmRemove [-dry]
# If the -dry option is provided, it displays the sizes of all node_modules directories.
# Otherwise, it removes all node_modules directories in the current directory and its subdirectories.
npmRemove() {
    if [ "$1" = "-dry" ]; then
        find . -name "node_modules" -type d -prune -exec du -chs {} +
    else
        find . -name "node_modules" -type d -prune -exec rm -rf {} +
    fi
}

# Generate a random password of a specified length using OpenSSL
# Usage: pw [length]
# Generates a random password of the specified length. Defaults to 24 if no length is specified.
pw() {
    local length=${1:-24}
    # Use base64, remove non-alphanumeric, and trim to length
    LC_ALL=C tr -dc 'A-Za-z0-9' < /dev/urandom | head -c "$length"
    echo
}

cal-year() {
    local year=${1:-$(date +%Y)}
    ncal -w ${year}
}

# This code performs operations based on the current selection.
# It processes the selected data or code block, applying the intended logic.
# Ensure the selection is valid before executing this code.
add-mac-space() {
    local size=${1:-d}

    if [ ! $(uname -s) = 'Darwin' ]; then
        case "$size" in
            s)
                defaults write com.apple.dock persistent-apps -array-add '{"tile-type"="small-spacer-tile";}'; killall Dock
                ;;
            d)
                defaults write com.apple.dock persistent-apps -array-add '{"tile-type"="spacer-tile";}'; killall Dock
                ;;
            *)
                echo "Usage: add-mac-space [s|d]"
                ;;
        esac
    fi
}
